extends ../layouts/common

block content
 
  h1(class="text-center") Create Book
  if errors
   each error in errors
    .alert.alert-danger= error
  div(class="container")
    form(method="POST", enctype="multipart/form-data")
      div(class="form-group")
        label(for="name") Name:
        input(name="name", type="text", id="name", class="form-control" value=value ? value.name : "")
        label(for="phone") Phone:
        input(name="phone", type="text", id="phone", class="form-control" value=value ? value.phone : "")
        label(for="email") Email*:
        input(name="email", type="text", id="email", class="form-control" value=value ? value.email : "")
        label(for="password") Password:
        input(name="password", type="password", id="password", class="form-control" value="123123")
        label(for="avatar") Avatar:
        input(name="avatar", type="file", id="avatar", class="form-control-file")
      button(class="btn btn-success btn-lg") Create