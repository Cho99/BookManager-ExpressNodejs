extends ../layouts/common

block content
 
  h1(class="text-center") Login
  if errors
   each error in errors
    .alert.alert-danger= error
  div(class="container")
    form(method="POST")
      div(class="form-group")
        label(for="email") Email:
        input(name="email", type="text", id="email", class="form-control" value=value ? value.email : "")
        label(for="password") Password:
        input(name="password", type="password", id="password", class="form-control" value=value ? value.password : "")
      button(class="btn btn-success btn-lg") Login